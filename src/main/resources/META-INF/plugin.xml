<idea-plugin>
    <id>zdc.ideaPlugin.MavenManager</id>
    <name>MavenManager</name>
    <version>1.0.1</version>
    <vendor email="zhoudechuan@yeah.net" url="https://github.com/zhoudechuan/ideaPlugin-MavenManager">Dechuan Zhou</vendor>
    <idea-version since-build="163.15529.8"/>

    <description><![CDATA[
        Manage dependencies of maven project to resolve jar conflicts.
        <br><br>
        Usage:<br>
            Pitch on pom.xml -> Right click -> MavenManager.<br>
    ]]></description>

    <depends>com.intellij.modules.idea</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <actions>
        <action id="ManagerJar"
                class="zdc.ideaPlugin.mavenManager.action.ManagerJarAction"
                text="MavenManager"
                description="Manage jar."
                icon="/images/mavenPlugin.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
